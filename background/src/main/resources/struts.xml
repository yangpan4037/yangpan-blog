<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="default" namespace="/" extends="struts-default">
		
		<!-- 主页 -->
    	<action name="main_*" class="mainAction" method="{1}">
    		<result name="success">/WEB-INF/main/main.jsp</result>
    		<result name="content">/WEB-INF/main/content.jsp</result>
    	</action>
    	
    	<!-- 通用 -->
		<!-- 这里的class可以配置spring的bean的id，虽然也可以使用类的全限定名，但是配置的bean就失效，并且使用全限定类名不能添加aop增强/通知 -->
		<action name="*_*" class="{1}Action" method="{2}">
			<result name="success">/WEB-INF/{1}/{1}.jsp</result>
			<result name="input">/WEB-INF/{1}_input.jsp</result>
			<result name="reload" type="redirectAction">{1}</result>
		</action>
	</package>
</struts>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.yangpan.core.domain">
	<class name="Role" table="role">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" column="name"/>
		<set name="permissions" table="role_permission">
			<key column="role_id"/>
			<many-to-many column="permission_id" class="Permission"/>
		</set>
		<set name="menus" table="role_menu">
			<key column="role_id"/>
			<many-to-many column="menu_id" class="Menu"/>
		</set>
	</class>
</hibernate-mapping>